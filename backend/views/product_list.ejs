<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("partials/head.ejs") %>
        <title>Minute Coffee - Drinks</title>
    </head>
    <body>
        <main>
            <%- include("partials/header.ejs") %>
            <form action="/products" method="get"
                class="search-form">
                <input type="text" name="search_term" id="search-term"
                    placeholder="Flat White" />
                <input type="submit" value="Search" />
                <a href="/products/sales" class="link-button sales-button">
                    Sales
                </a>
            </form>
            <section class="coffee-list">
                <% for (let product of products) { %>
                <article class="coffee-card">
                    <img src="/img/coffee.jpg"
                        alt="Takeaway coffee cup" />
                    <h2><%= product.name %></h2>
                    <span>$<%= product.price %></span>
                    <% if (product.stock > 0) { %>
                    <span>Stock: <%= product.stock %></span>
                    <% } else { %>
                    <span>Out of stock!</span>
                    <% } %>
                    <p><%= product.description %></p>
                    <a
                        href="/products/<%= product.id %>">Buy</a>
                </article>
                <% } %>
            </section>
            <%- include("partials/footer.ejs") %>
        </main>
    </body>
</html>